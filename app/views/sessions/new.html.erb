<div class="session-page">
  <div class="session-card">
    <div class="session-card-header">
      <div class="session-logo">â–£</div>
      <h1 class="session-title">Sign in</h1>
      <p class="session-subtitle">Enter your credentials to continue</p>
    </div>

    <% if flash[:alert] %>
      <div class="session-flash session-flash-alert"><%= flash[:alert] %></div>
    <% end %>
    <% if flash[:notice] %>
      <div class="session-flash session-flash-notice"><%= flash[:notice] %></div>
    <% end %>

    <%= form_with url: session_path, class: "session-form" do |form| %>
      <div class="session-field">
        <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your name", value: params[:username], class: "session-input" %>
      </div>
      <div class="session-field">
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "session-input" %>
      </div>
      <%= form.submit "Sign in", class: "session-submit" %>
    <% end %>

    <div class="session-footer">
      <%= link_to "Forgot password?", new_password_path, class: "session-link" %>
    </div>
  </div>
</div>
