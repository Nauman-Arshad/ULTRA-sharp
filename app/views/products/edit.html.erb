<div class="dashboard">
  <%= render "shared/navbar" %>
  <div class="dashboard-body">
    <%= render "shared/sidebar", current_tab: "products" %>
    <main class="dashboard-main">
      <div class="dashboard-card">
        <div class="page-header">
          <h1 class="page-title">Edit Product</h1>
          <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <%= link_to "Back to Product", product_path(@product), class: "btn-secondary" %>
            <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" }, class: "btn-danger" %>
          </div>
        </div>
        <div class="form-card">
          <%= render "form" %>
        </div>
      </div>
    </main>
  </div>
</div>
