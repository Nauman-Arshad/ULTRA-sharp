<%= form_with model: @product, class: "product-form" do |f| %>
  <% if @product.errors.any? %>
    <div class="form-errors">
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Product name" %>
    <%= f.text_field :name, class: "form-input", placeholder: "Product name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :unit_price, "Unit price" %>
    <%= f.number_field :unit_price, class: "form-input", placeholder: "0.00", step: 0.01 %>
  </div>
  <div class="form-actions">
    <%= f.submit class: "btn-primary" %>
    <%= link_to "Cancel", @product.persisted? ? product_path(@product) : root_path(tab: "products"), class: "btn-secondary" %>
  </div>
<% end %>
