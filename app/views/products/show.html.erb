<div class="dashboard">
  <%= render "shared/navbar" %>
  <div class="dashboard-body">
    <%= render "shared/sidebar", current_tab: "products" %>
    <main class="dashboard-main">
      <div class="dashboard-card">
        <div class="page-header">
          <h1 class="page-title"><%= @product.name %></h1>
          <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <%= link_to "Edit", edit_product_path(@product), class: "btn-primary" %>
            <%= link_to "Back to Products", root_path(tab: "products"), class: "btn-secondary" %>
            <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" }, class: "btn-danger" %>
          </div>
        </div>
        <div class="show-card">
          <div class="show-row">
            <span class="show-label">Product name</span>
            <span class="show-value"><%= @product.name %></span>
          </div>
          <div class="show-row">
            <span class="show-label">Unit price</span>
            <span class="show-value"><%= number_to_currency(@product.unit_price) %></span>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
