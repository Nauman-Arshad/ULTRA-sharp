<div class="dashboard">
  <%= render "shared/navbar" %>
  <div class="dashboard-body">
    <%= render "shared/sidebar", current_tab: "orders" %>
    <main class="dashboard-main">
      <div class="dashboard-card">
        <div class="page-header">
          <h1 class="page-title">Order <%= @order.order_number %></h1>
          <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <%= link_to "Edit", edit_order_path(@order), class: "btn-primary" %>
            <%= link_to "Back to Orders", root_path(tab: "orders"), class: "btn-secondary" %>
            <%= link_to "Delete", order_path(@order), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this order? Related payments will also be deleted." }, class: "btn-danger" %>
          </div>
        </div>
        <div class="show-card">
          <div class="show-row">
            <span class="show-label">Order number</span>
            <span class="show-value"><%= @order.order_number %></span>
          </div>
          <div class="show-row">
            <span class="show-label">Party</span>
            <span class="show-value"><%= link_to @order.party.party_name, party_path(@order.party) %></span>
          </div>
          <div class="show-row">
            <span class="show-label">Order date</span>
            <span class="show-value"><%= @order.order_date&.strftime("%b %d, %Y") %></span>
          </div>
          <div class="show-row">
            <span class="show-label">Status</span>
            <span class="show-value"><%= @order.order_status.presence || "—" %></span>
          </div>
        </div>
        <div class="show-card" style="margin-top: 20px;">
          <h3 class="order-detail-title">Items</h3>
          <table class="dashboard-table">
            <thead>
              <tr>
                <th>Product</th>
                <th style="text-align: right;">Quantity</th>
                <th style="text-align: right;">Unit price (PKR)</th>
                <th style="text-align: right;">Line total (PKR)</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |item| %>
                <tr>
                  <td><%= item.product_name %></td>
                  <td style="text-align: right;"><%= item.quantity %></td>
                  <td style="text-align: right;"><%= number_to_currency(item.unit_price) %></td>
                  <td style="text-align: right;"><%= number_to_currency(item.line_total) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="show-row" style="border-top: 2px solid #e2e8f0; margin-top: 12px; padding-top: 12px;">
            <span class="show-label">Order total</span>
            <span class="show-value" style="font-weight: 700;"><%= number_to_currency(@order.total_amount) %></span>
          </div>
        </div>
        <div class="show-card" style="margin-top: 20px;">
          <h3 class="order-detail-title">Payment</h3>
          <div class="show-row">
            <span class="show-label">Advance payment</span>
            <span class="show-value"><%= number_to_currency(@order.advance_payment) %></span>
          </div>
          <div class="show-row">
            <span class="show-label">Remaining amount</span>
            <span class="show-value"><%= number_to_currency(@order.remaining_amount) %></span>
          </div>
          <div class="show-row">
            <span class="show-label">Payment status</span>
            <span class="show-value"><%= tag.span(@order.payment_status.presence || "—", class: "status-pill #{@order.payment_status&.downcase}") %></span>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
